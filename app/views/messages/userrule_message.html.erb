<%= javascript_include_tag "/javascripts/userrulemessage.js" %>
<%= javascript_include_tag "/javascripts/test_message.js" %>
         <div class="row">
          <div class="main-content" style="width:620px;">
            <div class="page-header">
              <h2> 我的监控规则 <small> 关键词组合定义</small></h2>
            </div>
            
          <div id="modal-from-rule" class="modal hide fade">
            <div class="modal-header">
              <a href="#" class="close">&times;</a>
              <h3>Modal 标题</h3>
            </div>
            <div class="modal-body">
           <% if @rulenum > 0 %>
            <form>
				<input type="hidden" id="strruleid" value="<%=h @ruleonemessage.id%>" />
				<div id="strdiv">
					<ul>
						<li>规则名称：</li>
						<li>
							<input type="text" id="strrulename" value="<%=h @ruleonemessage.rulename%>" />
						</li>
						<li>关键字：</li>
						<li>
							<input type="text" id="strkeyword" value="<%=h @ruleonemessage.keyword%>" />
						</li>
						<li>用户名称：</li>
						<li>
							<input type="text" id="strusername" value="<%=h @ruleonemessage.username%>" />
						</li>
						<li>原创/转发：</li>
						<li>
							<select id="str_filter_ori">
								<%if @ruleonemessage.filterori == 0 %>
								<option value="0" selected="true" >全部</option>
								<% else %>
								<option value="0" >全部</option>
								<% end %>
								<%if @ruleonemessage.filterori == 4 %>
								<option value="4" selected="true">转发</option>
								<% else %>
								<option value="4" >转发</option>
								<% end %>
								<%if @ruleonemessage.filterori == 5 %>
								<option value="5" selected="true" >原创</option>
								<% else %>
								<option value="5" >原创</option>
								<% end %>
							</select>
						</li>
						<li>
							<input type="button" class="btn primary" id="strsave" value="保存" />
							<input type="button" class="btn" id="strclose" value="关闭" />
						</li>
					</ul>
				</div>
				</form>
				<% end %>
            </div> 
            <div class="modal-footer">
              <a href="#" class="btn primary">Primary</a>
              <a href="#" class="btn secondary">Secondary</a>
            </div>
          </div>
          <a class="btn" data-controls-modal="modal-from-rule" data-backdrop="static" >Launch Modal</a>
          
            
         </div> 
         <div class="dashboard"> 
         		<div class="components">
         		  <div class="component">
         		   <input type="text" id="txtrulename">
         		   <input type="button" class="btn big primary" id="txtruleadd" value="添加新规则" />
         		  </div>
				<hr class="component-spacer">
         		  <div class="component">
					<ul id="ruleselect">
					<%@rulemessage.each do |rulemessage|%>
					<li><a href='/messages/userrule_message?id=<%=h rulemessage.id %>'><%=h rulemessage.rulename %></a></li>
					<% end %>
				  </ul>
         		  </div>
				<hr class="component-spacer">
				
				</div>
          </div><!--   dashboard end   --> 
         <!--   details pane   --> 
          <div id="details-pane-outer">
			    <div class="details-pane-shell">
              <div class="details-pane" id="details-pane" style="display: none; height: 585px; width: 335px; left: 620px; margin-top: 15px; -webkit-transition-property: none; ">
		    		<div class="inner-pane active">
						  <div class="pane-toolbar pane-built-in">
						          <a class="pane-close toolbar-control " rel="pane_close" href="javascript:void(0)">关闭 <span>×</span></a>
						    <br style="clear: both">
						  </div>
						  <div id="pane-load" style="overflow-y:scroll; ">
						  </div>
			    	</div>
			  </div>
			</div></div>
			<!--   details pane  end --> 
</div></div>
</div>


